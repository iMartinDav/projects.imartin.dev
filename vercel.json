{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node@20"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/serverless.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}